<div class="c-form">

<h2 class="c-form__title">Create new account</h2>

<%= render "devise/shared/error_messages", resource: resource %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false} }) do |f| %>
  <div class="c-form__input-group">
    <div class="c-form__field">
      <%= f.text_field :name, 
        class: "c-input",
        placeholder: "Enter your name...", 
        required: true, 
        'aria-label': 'user name' 
      %>
    </div>

    <div class="c-form__field">
      <%= f.email_field :email, 
        class: "c-input",
        placeholder: "Enter your email...", 
        required: true, 
        'aria-label': 'user email' %>
    </div>

    <div class="c-form__field">
      <%= f.password_field :password, 
        class: "c-input",
        placeholder: "Enter password (6 chars minimum)...", 
        required: true, 
        'aria-label': 'password' %>
    </div>

    <div class="c-form__field">
      <%= f.password_field :password_confirmation, 
        class: "c-input",
        placeholder: "Confirm password...", 
        required: true, 
        'aria-label': 'password confirmation' %>
    </div>
  </div>

  <div class="c-form__action">
    <%= f.submit "Sign up", class: "c-form__btn" %>
    <p class="c-form__text">
      Already have an account?
      <%= link_to "Sign in!", new_user_session_path, class: "c-form__link" %>
    </p>
  </div>
<% end %>

</div>


